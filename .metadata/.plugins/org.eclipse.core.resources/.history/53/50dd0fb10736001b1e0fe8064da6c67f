package me.commonsenze.website.Object;

import java.util.List;
import java.util.UUID;

import org.springframework.data.mongodb.core.mapping.Document;

import com.fasterxml.jackson.annotation.JsonProperty;

import lombok.Getter;
import lombok.Setter;
import lombok.ToString;
import me.commonsenze.website.Util.JsonDocument;

@Getter
@Setter
@ToString
@Document(collection = "threads")
public class ForumThread implements JsonDocument {

	private String uniqueId, subcategoryId, imageURL, creator, title;
	private Post mainPost;
	private List<Post> replies;
	private boolean locked, sticky;
	
//	public ForumThread(@JsonProperty("uniqueId") String uniqueId, @JsonProperty("subcategoryId") String subcategoryId, 
//			@JsonProperty("imageURL")String imageURL, @JsonProperty("creator")String creator, 
//			@JsonProperty("text") String text, @JsonProperty("title")String title, @JsonProperty("replies")List<Post> replies, 
//			@JsonProperty("locked") boolean locked, @JsonProperty("sticky")boolean sticky) {
//		this.subcategoryId = subcategoryId;
//		this.imageURL = imageURL;
//		this.uniqueId = uniqueId == null ? UUID.randomUUID().toString() : uniqueId;
//		this.creator = creator;
//		this.title = title;
//		this.mainPost = new Post(null, this.uniqueId, creator, text, null, System.currentTimeMillis());
//		this.replies = replies;
//		this.locked = locked;
//		this.sticky = sticky;
//	}
//	
	public ForumThread(@JsonProperty("uniqueId") String uniqueId, @JsonProperty("subcategoryId") String subcategoryId, 
			@JsonProperty("imageURL") String imageURL, @JsonProperty("creator") String creator, @JsonProperty("mainPost") Object mainPost, 
			@JsonProperty("title") String title, @JsonProperty("replies") List<Post> replies,
			@JsonProperty("locked") boolean locked, @JsonProperty("sticky") boolean sticky) {
		this.subcategoryId = subcategoryId;
		this.imageURL = imageURL;
		this.uniqueId = uniqueId == null ? UUID.randomUUID().toString() : uniqueId;
		this.creator = creator;
		this.title = title;
		this.mainPost = (Post)mainPost;
		this.replies = replies;
		this.locked = locked;
		this.sticky = sticky;
	}
}
